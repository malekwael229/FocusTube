{
    "manifest_version": 3,
    "name": "FocusTube: Distraction Blocker",
    "version": "1.8",
    "description": "Stop Doomscrolling. Block YouTube Shorts, Instagram Reels, and TikTok.",
    "permissions": [
        "storage",
        "alarms",
        "notifications"
    ],
    "host_permissions": [
        "*://*.youtube.com/*",
        "*://*.instagram.com/*",
        "*://*.tiktok.com/*",
        "*://*.facebook.com/*"
    ],
    "action": {
        "default_popup": "popup.html"
    },
    "options_ui": {
        "page": "options.html",
        "open_in_tab": true
    },
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "matches": [
                "*://*.youtube.com/*",
                "*://*.instagram.com/*",
                "*://*.tiktok.com/*",
                "*://*.facebook.com/*"
            ],
            "css": [
                "styles.css"
            ],
            "js": [
                "content-common.js"
            ],
            "run_at": "document_start"
        },
        {
            "matches": [
                "*://*.youtube.com/*"
            ],
            "js": [
                "content-yt.js"
            ],
            "run_at": "document_start"
        },
        {
            "matches": [
                "*://*.instagram.com/*"
            ],
            "js": [
                "content-ig.js"
            ],
            "run_at": "document_start"
        },
        {
            "matches": [
                "*://*.tiktok.com/*"
            ],
            "js": [
                "content-tt.js"
            ],
            "run_at": "document_start"
        },
        {
            "matches": [
                "*://*.facebook.com/*"
            ],
            "js": [
                "content-fb.js"
            ],
            "run_at": "document_start"
        }
    ],
    "web_accessible_resources": [
        {
            "resources": [
                "icons/*.png"
            ],
            "matches": [
                "<all_urls>"
            ]
        }
    ],
    "icons": {
        "16": "icons/icon128.png",
        "48": "icons/icon128.png",
        "128": "icons/icon128.png"
    }
}
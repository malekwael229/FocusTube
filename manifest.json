{
  "manifest_version": 3,
  "name": "FocusTube",
  "version": "1.3",
  "description": "Stop Doomscrolling. Track Time Saved.",
  "permissions": ["activeTab", "storage"],
  "host_permissions": ["https://raw.githubusercontent.com/"],
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["*://*.youtube.com/*"],
      "css": ["styles.css"],
      "js": ["content.js"],
      "run_at": "document_start"
    }
  ],
  "icons": {
      "16": "icons/icon.png",
      "48": "icons/icon.png",
      "128": "icons/icon.png"
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "focustube@malekwael.com", 
      "strict_min_version": "109.0"
    }
  }
}

